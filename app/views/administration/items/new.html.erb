<h1>Ajouter un nouvel item</h1>

<%=  form_for @item, url: {action: "create"} do |f| %>
  <%= f.label :'image url' %>
  <%= f.text_field :image_url %><br>

  <%= f.label :'titre' %>
  <%= f.text_field :title %><br>

  <%= f.label :'description' %>
  <%= f.text_area :description %><br>

  <%= f.label :'prix' %>
  <%= f.text_field :original_price %><br>
  <%= f.submit "Créé" %>
<% end %>
