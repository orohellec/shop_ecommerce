<main class="content">
  <div class="container-fluid p-0">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title mb-0">Nouveau produit</h1>
          </div>
          <div class="card-body">
            <div id="introduction">
              <%=  form_for @item, url: {action: "create"} do |f| %>

                <b><%= f.label :'Nom du produit' %></b><br>
                <%= f.text_field :title %><br><br>

                <b><%= f.label :"Url de l'image" %></b><br>
                <%= f.text_field :image_url %><br><br>

                <b><%= f.label :'Description du produit' %></b><br>
                <%= f.text_area :description %><br><br>

                <b><%= f.label :'Prix (€)' %></b><br>
                <%= f.number_field :original_price, class: "text_field", step: 0.01 %><br><br><br>

                <%= f.submit "Créer", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
