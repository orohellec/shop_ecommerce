<body>
  <div class="main">
    <main class="content">
      <div class="container-fluid p-0">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h1 class="card-title mb-0">Commande n°<%= @cart.id %> : <%= @cart.user.first_name %> <%= @cart.user.last_name %></h1>
              </div>
              <div class="card-body">
                <div id="introduction">
                  <p>Prix total: <%= @cart.total_price %></p>
                  <p>Date: <%= @cart.created_at.strftime("%d/%m/%Y") %></p>
                  <p>Heure: <%= @cart.created_at.strftime("%H:%M:%S") %></p>
                  <% if @cart.paid? %>
                    <%= button_to "Marquez cette commande comme traité", administration_cart_path(@cart.id), params: {status: "processed"}, method: :patch, class: "btn btn-success" %>
                  <% else %> <!-- cart.processed? -->
                    <%= button_to "Marquez cette commande comme non traité", administration_cart_path(@cart.id), params: {status: "paid"}, method: :patch, class: "btn btn-warning" %>
                  <% end %><br>
                  <%= link_to "Supprimer la commande", administration_cart_path(@cart.id), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </div>

            <div class="card flex-fill">
              <table class="table table-striped my-0">
                <thead>
                  <tr>
                    <th>Id produit</th>
                    <th>Nom produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                  </tr>
                </thead>
                <tbody>
                  <% @items.each do |items|%>
                    <tr>
                      <td><%= items.item.id %></td>
                      <td><%= items.item.title %></td>
                      <td><%= items.item.original_price %> €</td>
                      <td><%= items.quantity %></td>
                      <td><%= items.subtotal %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
