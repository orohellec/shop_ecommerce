<br>
<div class="container">
  <div class="container_inner default_template_holder clearfix page_container_inner">
    <div class="projects_holder clearfix v3 standard">
    <% @items.each do |item| %>
      <article class="mix portfolio_category_17 portfolio_category_5  mix_all" style="display: inline-block; opacity: 1;">
        <div class="image_holder">
            <span class="image">
              <%= image_tag item.image_url %>
            </span>
          <span class="text_holder">
            <span class="text_outer">
              <span class="text_inner">
                <span class="feature_holder">
                  <span class="feature_holder_icons">
                    <%= link_to "voir le produit", item_path(item.id), class:"preview qbutton small white" %><br>
                    <%= button_to "Add to cart", cart_items_path(:id => @item), :remote => true, class:"preview qbutton small white" %>
                  </span>
                </span>
              </span>
            </span>
          </span>
        </div>
        <div class="portfolio_description ">
          <h5 class="portfolio_title"><a href="http://demo.qodeinteractive.com/bridge/portfolio_page/stockholm-fashion-destination/" target="_self"><%= item.title %></a></h5>
          <span class="project_category"><%= item.description %></span>
        </div>
      </article>
<%end%>

    </div> 
  </div>
</div>