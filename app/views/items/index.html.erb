  <div class="container">

    <div class="row">

      <div class="col-lg-12">
      	<center>
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="https://da4pli3l5vc0d.cloudfront.net/43/f7/43f75382a344173c26d105e1d4e25d0b3b9743cb" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://i.pinimg.com/originals/99/0f/3d/990f3dc7ddc51c9ab86228aefb8ffdb1.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="https://www.sacredwall.com/wp-content/uploads/2016/07/pokemon-900x350.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        </center>
        <br>

        <div class="row">
          <% @items.each do |item| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <%= link_to image_tag(item.image_url, class: "card-img-top"), item_path(item.id) %></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to item.title, item_path(item.id) %>
                  </h4>
                  <h5><%= number_to_currency(item.original_price) %></h5>
                  <p class="card-text"><%= item.description %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>

    </div>

  </div>
